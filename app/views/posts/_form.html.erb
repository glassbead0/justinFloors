<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>Oops! Please fix <%= pluralize(@post.errors.count, "error") %> below.</h4>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="field col-sm-2">
        <% f.label :title %><br>
        <%= f.text_field :title, class: 'form-control', placeholder: 'title' %>
      </div>
    </div>
    <div class="row">
      <div class="field col-sm-6">
        <% f.label :body %><br>
        <%= f.text_area :body, class: 'form-control', placeholder: 'Write your post here', size: '10x10' %>
      </div>
    </div>
    <div class="actions col-sm-12">
      <%= f.submit 'Publish', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
