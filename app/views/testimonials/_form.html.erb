<%= form_for(@testimonial) do |f| %>
  <% if @testimonial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h2>

      <ul>
      <% @testimonial.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-sm-2">
    <% f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>
  <div class="field col-sm-2">
    <% f.label :rating %><br>
    <%= f.number_field :rating, class: 'form-control', placeholder: 'Rating (1 - 5)' %>
  </div>
  <div class="field col-sm-12">
    <% f.label :testimonial %>. <br>
    <%= f.text_area :testimonial, class: 'form-control', size: '100x8', placeholder: 'Write your testimonial here' %>
  </div>
  <div class="actions col-sm-12">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
